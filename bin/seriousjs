#! /usr/bin/env node

var program = require('commander');
var path = require('path');

var sjs = require(path.join(__dirname, '../src/seriousjs'));

program
  .version('0.1.0')
  .usage('[options] file')
  .parse(process.argv);


if (program.args.length === 1) {
  sjs.evalFile(program.args[0]);
}
else {
  program.help();
}
